<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="doctor_category_details_view_form" model="ir.ui.view">
        <field name="name">doctor_category.view.form</field>
        <field name="model">doctor.category.master</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="category_name"/>
                        <field name="ref_code"/>
                        <field name="description"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_category_view_tree" model="ir.ui.view">
        <field name="name">doctor_category.view.tree</field>
        <field name="model">doctor.category.master</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="category_name"/>
                <field name="ref_code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="doctor_category_view_kanban" model="ir.ui.view">
        <field name="name">doctor_category.view.kanban</field>
        <field name="model">doctor.category.master</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <field name="category_name"/>
                        <field name="ref_code"/>
                        <field name="description"/>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="doctor_category_action" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">doctor.category.master</field>
        <field name="view_mode">tree,form,kanban</field>
      
    </record>

</odoo>
