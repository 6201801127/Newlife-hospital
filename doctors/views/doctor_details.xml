<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="doctor_details_view_form" model="ir.ui.view">
        <field name="name">doctor_details.view.form</field>
        <field name="model">doctor.details</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="registration_no"/>
                        <field name="specialized"/>
                        <field name="doctor_timing_mrng"/>
                        <field name="doctor_timing_evng"/>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_details_view_tree" model="ir.ui.view">
        <field name="name">doctor_details.view.tree</field>
        <field name="model">doctor.details</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="registration_no"/>
                <field name="specialized"/>
                <field name="doctor_timing_mrng"/>
                <field name="doctor_timing_evng"/>

            </tree>
        </field>
    </record>

    <record id="doctor_details_view_kanban" model="ir.ui.view">
        <field name="name">doctor_details.view.kanban</field>
        <field name="model">doctor.details</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <field name="name"/>
                        <field name="registration_no"/>
                        <field name="specialized"/>
                        <field name="doctor_timing_mrng"/>
                        <field name="doctor_timing_evng"/>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="doctor_details_action" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">doctor.details</field>
        <field name="view_mode">tree,form,kanban</field>
      
    </record>    

</odoo>